        </div>
      </div>

      {/* 메인 네비게이션 */}
      <nav className="flex-1 px-2 py-4">
        <div className="space-y-0.5">
          {staticNavigation.map((item) => {
            const isActive = isLinkActive(item.href)
            return (
              <Link
                key={item.name}
                href={item.href}
