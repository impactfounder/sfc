  // 이벤트 정보
  const { data: event } = await supabase
    .from("events")
    .select("id, title, created_by, status")
    .eq("id", id)
    .single();

  if (!event) notFound();
  if (event.created_by !== user.id) redirect(`/events/${id}`);

  // 커스텀 필드
