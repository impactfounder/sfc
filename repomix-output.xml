  const keyPreview = process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY?.substring(0, 30) || "NOT SET"
  const keyLength = process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY?.length || 0

