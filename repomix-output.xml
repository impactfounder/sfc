@theme inline {
  /* ... (theme inline 유지) ... */
}

@layer base {
  html {
    /* 스크롤바 공간을 무조건 차지하게 해서 페이지 이동 시 너비 변화 방지 */
    overflow-y: scroll;
    /* 스크롤바 점프 방지: 항상 스크롤바 공간을 확보 */
