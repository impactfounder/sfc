          <CardContent>
            {eventsWithCounts.length > 0 ? (
              <div className="space-y-4">
                {eventsWithCounts.map((event) => {
                  const eventDate = new Date(event.event_date)
                  const dateStr = eventDate.toLocaleDateString("ko-KR", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                    hour: "2-digit",
