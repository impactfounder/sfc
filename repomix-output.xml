import type { ReactNode } from "react"

interface ContentLayoutProps {
  mainContent: ReactNode
  rightSidebar?: ReactNode
  className?: string
}

/**
 * 게시판/컨텐츠 페이지용 공통 9:3 레이아웃
 *
 * - 1열: 모바일 전체, 데스크톱에서 12컬럼 그리드
 * - mainContent: lg 기준 좌측 9칸
 * - rightSidebar: lg 기준 우측 3칸
