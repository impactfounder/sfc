  board_categories?: {
    name: string
    slug: string
  } | null
}

interface LatestPostsSectionProps {
  posts: Post[]
}

export function LatestPostsSection({ posts }: LatestPostsSectionProps) {
  const [activeFilter, setActiveFilter] = useState<BoardFilter>("all")

