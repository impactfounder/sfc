export function isMasterAdmin(userRole?: string | null, userEmail?: string | null): boolean {
  // role이 'master'인 경우
  if (userRole === 'master') {
    return true
  }
  
  // 이메일 기반 체크 (백업용)
  if (userEmail === 'jaewook@mvmt.city') {
