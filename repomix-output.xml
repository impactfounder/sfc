type Post = {
  id: string
  title: string
  created_at: string
  profiles: {
    id: string
    full_name: string | null
    avatar_url: string | null
  } | null
  board_categories: {
    id: string
    name: string
    slug: string
  } | null
}

type Badge = {
  id: string
  name: string
  icon: string
  category: string
  description: string | null
}

type PendingBadge = {
  id: string
  status: string
  evidence: string | null
  created_at: string
  profiles: {
    id: string
    full_name: string | null
    email: string | null
    avatar_url: string | null
  } | null
  badges: {
    id: string
    name: string
    icon: string
  } | null
