ON CONFLICT (slug) DO UPDATE
SET is_active = true, order_index = EXCLUDED.order_index;

-- Step 2: 커뮤니티 카테고리 추가 (반골, 하이토크)
INSERT INTO board_categories (name, slug, description, is_active, order_index)
VALUES
