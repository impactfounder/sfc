-- 포인트 지급 함수
CREATE OR REPLACE FUNCTION award_points(
  p_user_id UUID,
  p_amount INTEGER,
  p_type TEXT,
  p_description TEXT,
  p_event_id UUID DEFAULT NULL
)
RETURNS void AS $$
BEGIN
  -- 포인트 업데이트
  UPDATE profiles 
  SET points = points + p_amount
  WHERE id = p_user_id;
  
  -- 거래 내역 기록
