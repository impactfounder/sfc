      const supabase = createClient()
      const { data } = await supabase
        .from("post_likes")
        .select("id")
        .eq("post_id", post.id)
        .eq("user_id", user.id)
        .maybeSingle()
      setIsLiked(!!data)
    }
    checkLikeStatus()
  }, [post.id, user])

  // 본문 텍스트 정리 (HTML 태그 제거)
