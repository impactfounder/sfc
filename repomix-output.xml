                <label htmlFor="content" className="text-sm font-medium text-slate-900">
                  내용
                </label>
                <Textarea
                  id="content"
                  name="content"
                  required
                  placeholder="내용을 입력하세요"
                  className="min-h-[300px] w-full"
                />
              </div>

              <div className="flex gap-3">
                <Button type="submit" className="flex-1">
                  작성하기
